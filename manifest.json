{
    "manifest_version": 3,
    "name": "Transcript Extractor",
    "version": "2.0",
    "description": "Vyextrahuj a zkopíruj si transcript z Fireflies do schránky.",
    "permissions": ["activeTab", "scripting", "clipboardWrite"],
    "host_permissions": ["https://fireflies.ai/*"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    }
}
